<div class="col-md-6">
  <h2>修改討論版</h2>
  <%= simple_form_for @group do |f| %>
  <%= f.input :title, :input_html => {:class => "form-control"} %>
  <%= f.input :description, :input_html => {:class => "form-control"} %>

  <div class="form-group">
    <%= f.submit "Submit", :disable_with => 'Submit...', :class => "btn btn-primary" %>
  </div>

  <% end %>
</div>
